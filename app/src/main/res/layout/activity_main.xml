<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="khacquyetdang.android.com.phrases.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:columnCount="2"
        android:rowCount="4">

        <Button
            android:id="@+id/helloBtn"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_yello"
            android:text="Hello " />

        <Button
            android:id="@+id/goodEveningBtn"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_bluesky"
            android:text="Good evening" />

        <Button
            android:id="@+id/doYouSpeekBtn"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_red"
            android:text="Do you speak" />


        <Button
            android:id="@+id/iliveinBtn"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_yello"
            android:text="I live in " />


        <Button
            android:id="@+id/pleaseBtn"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_blue"
            android:text="Please" />

        <Button
            android:id="@+id/welcomeBtn"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_bluesky"
            android:text="Welcome" />

        <Button
            android:id="@+id/mynameisBtn"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_yello"
            android:text="My name is" />

        <Button
            android:id="@+id/howAreYouBtn"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_red"
            android:text="How are you?" />
    </GridLayout>
</LinearLayout>
